{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2016",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "./src/client/dist",
  },
  "include": [
    "src"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/types"
  ]
}